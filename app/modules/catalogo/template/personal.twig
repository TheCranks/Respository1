{% extends "template/index.twig" %}

{% block head %}
    <link href="public/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <link href="public/css/plugins/iCheck/custom.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-md-10">
            <h2>Administración de Personal</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Inicio</a>
                </li>
                <li class="active">
                    <strong>Personal</strong>
                </li>
            </ol>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="rowfooter">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Nuevo Personal <small></small></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <input type="hidden" id="txtIdPersonal">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-md-3" for=""><label for="" class="text-danger">*</label>Nombres:</label>
                                        <div class="col-md-9">
                                            <input class="form-control requerido" type="text" id="txtNombresPersonal" maxlength="50">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="" class="col-md-3"><label for="" class="text-danger">*</label>Apellidos:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control requerido" id="txtApellidosPersonal" maxlength="50">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <br>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-md-3" for="">Dirección:</label>
                                        <div class="col-md-9">
                                            <textarea name="" id="txtDireccionPersonal" cols="30" class="form-control" rows="5"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="" class="col-md-3">Celular:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="txtCelularPersonal" maxlength="13">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <br>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="col-md-3" for=""><label for="" class="text-danger">*</label>Cédula:</label>
                                        <div class="col-md-9">
                                            <input class="form-control requerido" type="text" id="txtCedula">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="" class="col-md-3">Correo Electrónico:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="txtCorreoPersonal">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <br>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="" class="col-md-3"><label for="" class="text-danger">*</label>Sexo</label>
                                        <div class="col-md-4">
                                            <select name="" id="selSexoPersonal" class="form-control requerido">
                                                <option value="1">Hombre</option>
                                                <option value="0">Mujer</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        <br>

                            <div class="row text-right">
                                <div class="col-sm-12">
                                    <a class="btn btn-sm btn-warning" id="btn_limpiar" href="/jusmar/catalogo/personal">
                                        <strong>Cancelar</strong></a>
                                    <button class="btn btn-sm btn-primary" id="btnGuardaPersonal">
                                        <strong>Guardar</strong></button>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Lista de Personal </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped" id="tbl_personal">
                                <thead>
                                <tr>

                                    <th>Id</th>
                                    <th>Nombres </th>
                                    <th>Apellidos </th>
                                    <th>Cédula </th>
                                    <th>Dirección</th>
                                    <th>Teléfono</th>
                                    <th>Correo</th>
                                    <th>Sexo</th>
                                    <th>Accion</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <!-- iCheck -->
    <script src="public/js/plugins/iCheck/icheck.min.js"></script>
    <script src="public/js/catalogo/functionPersonal.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });
        });
    </script>
{% endblock %}


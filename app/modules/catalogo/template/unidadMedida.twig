{% extends "template/index.twig" %}

{% block head %}
    <link href="public/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <link href="public/css/plugins/iCheck/custom.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-md-10">
            <h2>Catalogo Unidad Medida</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Inicio</a>
                </li>
                <li class="active">
                    <strong>Unidad Medida</strong>
                </li>
            </ol>
        </div>
        <div class="col-md-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-md-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Nueva unidad Medida
                            <small></small>
                        </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <input type="hidden" id="txtIdUnidadMedida">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-md-3" for=""><label for="" class="text-danger">*</label>Descripcion:</label>
                                    <div class="col-md-9">
                                        <input class="form-control requerido" type="text" id="txtNombreUM"
                                               maxlength="50">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="col-md-3" for=""><label for="" class="text-danger">*</label>Abreviatura:</label>
                                    <div class="col-md-9">
                                        <input class="form-control requerido" type="text" id="txtAbreviaturaUM"
                                               maxlength="6">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row text-right">
                            <div class="col-sm-12">
                                <a class="btn btn-sm btn-warning" id="btn_limpiar" href="/jusmar/catalogo/unidadmedida">
                                    <strong>Cancelar</strong></a>
                                <button class="btn btn-sm btn-primary" id="btnGuardaUnidadMedida">
                                    <strong>Guardar</strong></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Lista de Unidades Medida </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped" id="tbl_unid_medidas">
                                <thead>
                                <tr>

                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Abreviatura</th>
                                    <th>Seleccionar</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <!-- iCheck -->
    <script src="public/js/plugins/iCheck/icheck.min.js"></script>
    <script src="public/js/catalogo/functionUM.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });
        });
    </script>
{% endblock %}


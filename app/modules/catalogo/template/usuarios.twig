{% extends "template/index.twig" %}

{% block head %}
    <link href="public/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <link href="public/css/plugins/iCheck/custom.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Administración de Usuarios</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Inicio</a>
                </li>
                <li class="active">
                    <strong>Usuarios</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>

    <div class="modal fade" id="modalPersonal" role="dialog" data-backdrop="static" data-keyboard="false" tabindex="-1"
         role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background: #F8AC59;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h3 class="text-left" style=" color: white;">Seleccione</h3>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <div class="row">
                            <div class="table-responsive">
                                <table class="table table-striped" id="tbl_personal">
                                    <thead>
                                    <tr>

                                        <th>Id</th>
                                        <th>Nombres</th>
                                        <th>Apellidos</th>
                                        <th>Cédula</th>
                                        <th>Dirección</th>
                                        <th>Teléfono</th>
                                        <th>Correo</th>
                                        <th>Sexo</th>
                                        <th>Accion</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-success" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="rowfooter">
            <div class="col-lg-7">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Nuevo usuario
                            <small></small>
                        </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label class="col-lg-3" for="">Nombres</label>
                                    <div class="col-lg-9">
                                        <input type="hidden" class="requerido" id="txtIdPersonal">
                                        <input class="form-control" readonly type="text" id="txtNombres" maxlength="50">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="text-center">
                                    <a data-toggle="modal" class="btn btn-primary" href="#modalPersonal"
                                       id="btn_buscaPersona"><i class="fa fa-search"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label class="col-lg-3">Usuario</label>
                                    <div class="col-lg-8">
                                        <input type="hidden" id="txtIdUsuario">
                                        <input type="text" class="form-control requerido" id="txtUsuario">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label class="col-lg-3">Contraseña</label>
                                    <div class="col-lg-8">
                                        <input type="password" class="form-control requerido" id="txtPass">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label class="col-lg-3">Repetir Contraseña</label>
                                    <div class="col-lg-8">
                                        <input type="password" class="form-control requerido" id="txtRePass">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label class="col-lg-3">Rol</label>
                                    <div class="col-lg-8">
                                        <select class="form-control m-b requerido" id="selRoles">
                                            <option value="0">Usuario</option>
                                            <option value="1">Administrador</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <label class="col-lg-3"> Activo</label>
                                <div class="col-lg-4">
                                    <input type="checkbox" id="ckActivo" class="i-checks" checked>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row text-right">
                            <div class="col-sm-12">
                                <a class="btn btn-sm btn-warning  " href="/jusmar/catalogo/usuarios">
                                    <strong>Cancelar</strong></a>
                                <button class="btn btn-sm btn-primary" id="btnGuardaUsuario">
                                    <i class="fa fa-save"> </i> Guardar</button>
                                <button class="btn btn-sm btn-danger"><i class="fa fa-trash"> </i> Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Lista de usuarios </h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#">Config option 1</a>
                                </li>
                                <li><a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped" id="tbl_usuarios">
                            <thead>
                            <tr>

                                <th>Id Usuario</th>
                                <th>Nombres</th>
                                <th>NickName</th>
                                <th>Contraseña</th>
                                <th>Rol</th>
                                <th>id persona</th>
                                <th>Estado</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    <!-- iCheck -->
    <script src="public/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green'
            });
        });
    </script>
    <script src="public/js/catalogo/functionUsuarios.js"></script>

{% endblock %}


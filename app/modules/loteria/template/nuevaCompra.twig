{% extends "template/index.twig" %}

{% block head %}
    {#<link href="public/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet">
    <link href="public/css/plugins/iCheck/custom.css" rel="stylesheet">#}
{% endblock %}

{% block content %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-md-10">
            <h2>Nueva Compra</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Inicio</a>
                </li>
                <li class="active">
                    <strong>Nueva Entrada</strong>
                </li>
            </ol>
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="rowfooter">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <input type="hidden" id="txtIdPersonal">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label class="col-md-3" for=""><label for=""
                                                                          class="text-danger">*</label>Proveedor:</label>
                                    <div class="col-md-9">
                                        <select name="" id="selProveedor" class="form-control">
                                            <option value="0">Proveedor Estandar</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <div class="form-group">
                                    <label for="" class="col-md-3">Fecha:</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" readonly id="txtFecha"
                                               value="{{ fecha }}">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <div class="col-md-4">
                                <h4>Agregar Articulos</h4>
                            </div>
                            <div class="col-md-2">
                                <button class="btn btn-block btn-primary" data-toggle="modal" class="btn btn-primary" href="#modalArticulos"><i class="fa fa-search"> </i> Buscar
                                </button>
                            </div>
                        </div>
                        <hr>
                        <br>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-striped" id="tbl_detalle_factura">
                                        <thead>
                                        <tr>
                                            <th>Código</th>
                                            <th>Cant.</th>
                                            <th>Descripción</th>
                                            <th>Precio Unit.</th>
                                            <th>Importe</th>
                                            <th>Acciones</th>
                                        </tr>
                                        </thead>
                                        <tbody id="bodyFactura">
                                        </tbody>
                                        <tfoot>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-6 text-right">
                                <button class="btn btn-primary" id="btnGuardarCompra"><i class="fa fa-save"></i> Guardar</button>
                                <a class="btn btn-warning" id="btn_limpiar" href="/jusmar/compra/nueva">
                                    <strong><i class="fa fa-recycle"> </i> Cancelar</strong></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalArticulos" role="dialog" data-backdrop="static" data-keyboard="false" tabindex="-1"
             role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header" style="background: #F8AC59;">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h3 class="text-left" style=" color: white;">Seleccione</h3>
                    </div>
                    <div class="modal-body">
                        <div class="panel-body">
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table table-striped" id="tbl_articulos">
                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Nombres </th>
                                            <th>Presentacion</th>
                                            <th>Unidad Medida</th>
                                            <th>Existencias</th>
                                            <th>Precio Compra</th>
                                            <th>Cantidad</th>
                                            <th>Accion</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-success" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
{% block footer %}
    <script src="public/js/ventas/functionCompras.js"></script>
{% endblock %}

